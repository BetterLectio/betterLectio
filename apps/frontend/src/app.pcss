@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,700&display=swap');
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	:root {
		--background: 0 0% 100%;
		--foreground: 240 10% 3.9%;
		--card: 0 0% 100%;
		--card-foreground: 240 10% 3.9%;
		--popover: 0 0% 100%;
		--popover-foreground: 240 10% 3.9%;
		--primary: 240 5.9% 10%;
		--primary-foreground: 0 0% 98%;
		--secondary: 240 4.8% 95.9%;
		--secondary-foreground: 240 5.9% 10%;
		--muted: 240 4.8% 95.9%;
		--muted-foreground: 240 3.8% 46.1%;
		--accent: 240 4.8% 95.9%;
		--accent-foreground: 240 5.9% 10%;
		--destructive: 0 72.22% 50.59%;
		--destructive-foreground: 0 0% 98%;
		--border: 240 5.9% 90%;
		--input: 240 5.9% 90%;
		--ring: 240 5.9% 10%;
		--radius: 0.5rem;
	}
	.dark {
		--background: 240 10% 3.9%;
		--foreground: 0 0% 98%;
		--card: 240 10% 3.9%;
		--card-foreground: 0 0% 98%;
		--popover: 240 10% 3.9%;
		--popover-foreground: 0 0% 98%;
		--primary: 0 0% 98%;
		--primary-foreground: 240 5.9% 10%;
		--secondary: 240 3.7% 15.9%;
		--secondary-foreground: 0 0% 98%;
		--muted: 240 3.7% 15.9%;
		--muted-foreground: 240 5% 64.9%;
		--accent: 240 3.7% 15.9%;
		--accent-foreground: 0 0% 98%;
		--destructive: 0 68% 45%;
		--destructive-foreground: 0 0% 98%;
		--border: 240 3.7% 15.9%;
		--input: 240 3.7% 15.9%;
		--ring: 240 4.9% 83.9%;
	}
}

@layer base {
	* {
		@apply border-border;
	}
	body {
		@apply bg-background text-foreground;
	}
}

.page-container {
	@apply container mx-auto p-4 xl:p-10 space-y-10;
}

.page-container-x {
	@apply container mx-auto px-4 xl:px-10;
}

h1:not(:where([class~='unstyled'], [class~='unstyled'] *)) {
	@apply text-4xl leading-[1.11] font-bold;
}

h2:not(:where([class~='unstyled'], [class~='unstyled'] *)) {
	@apply text-2xl leading-[1.33] font-bold mt-[2em];
}
h3:not(:where([class~='unstyled'], [class~='unstyled'] *)) {
	@apply text-xl leading-[1.6] font-semibold mb-2 mt-6;
}

h2 + *:not(:where([class~='unstyled'], [class~='unstyled'] *)) {
	@apply !mt-0;
}
h3 + *:not(:where([class~='unstyled'], [class~='unstyled'] *)) {
	@apply !mt-0;
}

ul:not(:where([class~='unstyled'], [class~='unstyled'] *)) {
	@apply list-disc pl-6;
}

a:not(:where([class~='unstyled'], [class~='unstyled'] *)) {
	@apply underline font-medium;
}

::-webkit-scrollbar {
	display: none;
}

.fc-timegrid-event .fc-event-main {
	@apply p-0.5;
}

.fc-timegrid-event-harness-inset .fc-timegrid-event,
.fc-timegrid-event.fc-event-mirror,
.fc-timegrid-more-link {
	@apply shadow-none rounded-md;
}

.fc-event {
	@apply border overflow-hidden border-input bg-background shadow-sm hover:bg-accent ring-0 hover:text-accent-foreground inline-flex whitespace-nowrap rounded-md transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50;
}

.event-cancelled {
	@apply border-2 !border-[#ff3f3f];
}

:is(.event-cancelled .fc-event-title) {
	text-decoration: line-through;
}

.fc-event-title {
	@apply font-medium text-sm dark:font-semibold;
}

:is(.event-cancelled .fc-event-title) {
	@apply text-[#ff3f3f];
}

:is(.event-cancelled .fc-event-time) {
	@apply text-[#ff3f3f];
}

.fc .fc-button {
	@apply border border-input bg-background text-primary shadow-sm hover:bg-accent ring-0 hover:text-accent-foreground inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50;
}

.fc .fc-button-primary:disabled {
	@apply border border-input bg-background text-primary shadow-sm hover:bg-accent ring-0 hover:text-accent-foreground inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50;
}

.fc .fc-button-primary {
	@apply border-input hover:border-input;
}

.fc .fc-button-primary:disabled {
	@apply border-input hover:border-input;
}

.fc .fc-timegrid-col.fc-day-today {
	background-color: transparent;
}

.fc .fc-timegrid-now-indicator-arrow {
	border-width: 5px 0px 5px 6px !important;
	border-bottom-color: transparent !important;
	border-top-color: transparent !important;
	@apply border-black dark:border-white;
}

.fc .fc-timegrid-now-indicator-line {
	@apply mt-[-2px] border-[2px] border-primary;
}

.fc .fc-scrollgrid {
	@apply bg-background rounded-lg;
}

.fc .fc-timegrid-slot-label {
	@apply block border-none !mt-[-1em];
}

.fc tr:first-child .fc-timegrid-slot-label {
	@apply hidden;
}

.fc-theme-standard .fc-scrollgrid {
	@apply dark:border-input;
}
.fc-theme-standard td {
	@apply dark:border-input;
}
.fc-theme-standard th {
	@apply dark:border-input;
}

.apexcharts-svg {
	@apply dark:!bg-primary;
}

[data-tippy-root] {
	max-width: calc(100vw - 10px);
}

.tippy-box {
	position: relative;
	@apply z-50 w-64 rounded-md border bg-popover p-2 text-popover-foreground shadow-md outline-none;
	font-size: 14px;
	line-height: 1.4;
	white-space: normal;
	outline: 0;
	transition-property: all;
}

.tippy-box[data-placement^='top'] > .tippy-arrow {
	bottom: 0;
}

.tippy-box[data-placement^='top'] > .tippy-arrow:before {
	bottom: -7px;
	left: 0;
	border-width: 8px 8px 0;
	@apply border-t-white dark:border-t-[#1E1E1E];
	transform-origin: center top;
}

.tippy-arrow {
	width: 16px;
	height: 16px;
}

.tippy-arrow:before {
	content: '';
	position: absolute;
	border-color: transparent;
	border-style: solid;
}

.tippy-content {
	position: relative;
	padding: 5px 9px;
	z-index: 1;
}
